{
  "name": "luhnjs",
  "version": "0.1.0",
  "description": "N-API addon with Luhn's algorithm implementation",
  "main": "index.js",
  "scripts": {
    "test": "npx mocha ./**/*.test.js",
    "checkCodeStyle": "npx prettier ./**/*.js --list-different",
    "formatCode": "npx prettier ./**/*.js --list-different --write",
    "lint": "npx eslint .",
    "build": "node-gyp rebuild",
    "clean": "node-gyp clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pniewiejski/luhnjs.git"
  },
  "keywords": [
    "luhn",
    "luhn algorithm",
    "smart card",
    "check digit",
    "ISO 7812",
    "credit card",
    "checksum"
  ],
  "author": "Piotr Niewiejski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pniewiejski/luhnjs/issues"
  },
  "homepage": "https://github.com/pniewiejski/luhnjs#readme",
  "files": [
    "index.js",
    "lib/**/*.js",
    "luhncpp/src/**/*.cpp",
    "luhncpp/include/**/*.hpp",
    "binding.gyp"
  ],
  "os": [
    "darwin",
    "linux"
  ],
  "devDependencies": {
    "eslint": "^6.6.0",
    "mocha": "^6.2.2",
    "node-gyp": "^6.0.1",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "node-addon-api": "2.0.0"
  }
}
